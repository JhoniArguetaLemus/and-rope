<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35495e"
    android:orientation="vertical"
    tools:context=".fin_reserva">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="90sp"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gracias"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por tu preferencia, esperamos servirte pronto."
        android:textAlignment="center"
        android:textColor="#ff7e67"
        android:textSize="50sp" />


    <Button
        android:id="@+id/ir_inicio"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:backgroundTint="#347474"
        android:text="Inicio"
        android:textColor="#ff7e67"
        android:textSize="24sp" />


</LinearLayout>