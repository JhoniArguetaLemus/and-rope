<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pago_tarjeta"

    android:background="#0092ca"
    android:orientation="vertical"
    >

    <ImageButton
        android:id='@+id/preguntas_tarjeta'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:src="@drawable/question" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp"
        android:text="Pago con tarjeta de credito"
        android:textAlignment="center"
        android:textColor="#eeeeee"
        android:textSize="24sp"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/linear_pago"
        android:backgroundTint="#eeeeee"

        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="117dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/dollar"

            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"

            >


            <EditText
                android:id="@+id/edtNombreTarjeta"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/input_bg"
                android:hint="Nombre según tarjeta"
                android:inputType="text"
                android:textAlignment="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Número de tarjeta"
                android:textSize="15sp"

                />

            <EditText
                android:id="@+id/edtNumero_tarjeta"
                android:layout_width="237dp"
                android:layout_height="42dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_bg"
                android:hint="0000 0000 0000 0000"
                android:inputType="number"
                android:textAlignment="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Fecha de expiración"
                android:textSize="15sp"

                />

            <EditText
                android:id="@+id/edtFechaExpericion"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/input_bg"
                android:hint="06/30"
                android:inputType="datetime"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Código de seguridad"
                android:textSize="15sp"

                />

            <EditText
                android:id="@+id/edtCodigoSeguridad"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/input_bg"
                android:hint="000"
                android:inputType="number"
                android:textAlignment="center" />


            <Button
                android:id="@+id/btnPagarTarjeta"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:backgroundTint="#393e46"
                android:text="Pagar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/visa"

                    />


                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mastercard"

                    />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>