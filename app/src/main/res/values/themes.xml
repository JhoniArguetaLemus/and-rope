<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndropeINN" parent="Theme.Material3.Light">

        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.AndropeINN" parent="Base.Theme.AndropeINN" />

    <style name="Theme.AndropeINN.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndropeINN.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndropeINN.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="crearCuenta" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>



    </style>


    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item> <!-- Puedes ajustar este valor para controlar la curvatura -->
    </style>



</resources>